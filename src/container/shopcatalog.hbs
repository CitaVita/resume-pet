<header>
     {{#with navigation}}
<div class="card mb-5">
        <div class="row">
            <div class="nav d-flex">
                {{#each links}}
                    <a hfer="{{link}}" class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>
                {{/each}}

            </div>
        </div>
</div>
{{/with}}
</header>

<main>
    <div class="col-6">
        <div class="row">
              <ol class="breadcrumb">
                 {{#each breadcrumb}}
                    <li class="breadcrumb-item">
                        <a href="{{#if url}}null{{/if}}">{{name}}</a>
                    </li>
                {{/each}}
              </ol>
        </div>
    </div>  

<div class="mt-5 mb-5">
     <h4><p>{{header}}</p></h4>
</div>

<div class="row">
<div class="mt-5 mb-5">
    <div class="col-6">
        {{#each sortBlock}}
            <label class="form-label">
                <select class="form-select form-select-sm">
                    <option selected>{{placeholder}}</option>
                         {{#each options}}
                            <option>{{value}}</option>
                            <option>{{text}}</option>
                        {{/each}}
                </select>
            </label>
        {{/each}}
    </div>
</div>
</div>

<div class="card col-4">
<div class="mt-3 mb-3">
    {{#with filterBlock}}
    {{#with sellers}}
        <label class="form-label">{{title}}</label>
            <div class="form-check">
                {{#each list}}
                <label class="form-check-label">{{value}}</label>
                <input type="checkbox" class="form-check-input">
                {{/each}}
            </div>
    {{/with}}
    {{/with}}
</div>
</div>













</div>





</main>
<html>
    <header>
        {{#with navigation}}
        <div class="card mb-5">
            <div class="p-2 row">
             <nav class="nav d-flex">
              {{#each links}}
              <a href="{{href}}" class=" nav-link">{{text}}</a>
                {{/each}}
            <a href="#" class="nav-link disabled">Disabled</a>
             </nav>
            </div>
        </div>
        {{/with}}
    </header>

    <hr>

<main>
    <div class="mb-5 mt-5">
           <h2> <p class="ps-3"{{#with header}}></p></h2> 
              <h2>{{title}}</h2>
              <div class="mt-3">{{#with button}}
               <a href="{{link}}" class="btn btn-outline-secondary">{{text}}</a>
            </div>
        {{/with}}
    </div>
 {{/with}}
</main>

<hr>

<div class="card mt-5">
   <div class="row">
        <div class="header ps-2">
           
            {{#each goodsBlock}}
            <div>{{#with this}}
        <img class="col-2 mt-2 ps-2" src="{{image}}" alt="photos">
         <div class="row">
                     <div class="body col-6">
                           <h4><p>{{name}}</p></h4>
                           <p>{{description}}</p>
                        </div>
                
                        
                        <div class="col-1">
                            <p>{{price.title}}</p>
                        </div>
                         
                          
                        <div class="col-1">
                           <h4><p>{{price.value}}</p></h4>
                        </div>
              
                      
                    <div class="col-2">
                     <p class="text-lg">{{amount}}</p>
                </div>
               
               
                <div class="footer col-2">
                  {{#each buttons}}
                 <button class="btn btn-primary{{#if isPrimary}}primary{{/if}}">{{text}}</button> 
                <button class="btn btn-outline-danger{{#if isDanger}}danger{{/if}}">{{text}}</button>
          </div>
          </div>
            
         {{/each}}
   </div>
</div>
    </div>
      </div>
      </div>
      {{/with}}   
{{/each}}
</div>



</html>
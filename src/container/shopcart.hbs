<html>
    <header>
        {{#with navigation}}
        <div class="card mb-5">
            <div class="p-2 row">
             <nav class="nav d-flex">
              {{#each links}}
              <a href="{{href}}" class=" nav-link">{{text}}</a>
                {{/each}}
            <a href="#" class="nav-link disabled">Disabled</a>
             </nav>
            </div>
        </div>
        {{/with}}
    </header>

    <hr>

<main>
    <div class="mb-5 mt-5">
           <h2> <p class="ps-3"{{#with header}}></p></h2> 
              <h2>{{title}}</h2>
              <div class="mt-3">{{#with button}}
               <a href="{{link}}" class="btn btn-outline-secondary">{{text}}</a>
            </div>
        {{/with}}
    </div>
 {{/with}}
</main>

<hr>

 {{#each goodsBlock}}
     <div class="card my-3">
         <div class="row">
         <div class="col-2">
             <img class="card-img" src="{{image}}" alt="photos">
             </div>
                <div class="col-4">
                <h4><p>{{name}}</p></h4>
                  <p>{{description}}</p>
                    </div>
                
                        
                        <div class="col-2">
                            <p>{{price.title}}</p>
                            <h4><p>{{price.value}}</p></h4>
                        </div>
                      
                    <div class="col-2">
                     <p class="text-lg">{{amount}}</p>
                </div>
                 
<div class="col-2">
     {{#each buttons}}
         {{#if isPrimary}}
            <button class="btn btn-primary">{{text}}</button> 
            {{/if}}
             {{#if isDanger}}
             <button class="btn btn-outline-danger">{{text}}</button>
            {{/if}}
        {{/each}}
    </div>
    </div>
    </div>
{{/each}}

<hr>

<div class="ms-2 mt-5 mb-5">
    {{#with total}}
        <h3>{{title}}</h3>
            <h3>{{amount}}</h3>
                <div>{{delivery}}</div>
                   <div class="d-grid gap-3 mt-3">{{#each buttons}}
               <div> {{#if isSuccess}}
            <a href="{{link}}" class="btn btn-success">{{text}}</a>
        {{else}}
           <div> {{#if isOutline}}
            <a href="{{link}}" class="btn btn-outline-success">{{text}}</a>       
                 </div>
                    {{/if}} 
                        </div>
                    {{/if}}
                </div>
            {{/each}}
        </div>
    {{/with}}

<hr>

<div class="mt-5 mb-3">
    {{#with goodsOtherBlock}}
    <div class="text-center">
    <h3>{{title}}</h3>
</div>
</div>

<section>
    <div class="mt-5 mb-5">
        <div class="row g-3">	
        {{#each cards}}
            <div class="card col-4 mb-5">
                 <img  class="card-img-top"src="{{image}}" alt="photos">
                 <div class="card-title">
                    <h5><p>{{title}}</p></h5>
                      {{#if isHot}}
                        <span class="btn btn-warning rounded-pill text-uppercase btn-sm">hot</span>
                        {{/if}}
                       {{#if isNew}}
                        <span class="btn btn-primary rounded-pill text-uppercase btn-sm">new</span>
                     {{/if}}
                    </div>                    
                     <p class="card-text">{{description}}</p>    
                    </div>
            {{/each}}  
         </div>     
        </div>
    </div>
{{/with}}

<hr>

        <section>
<div class="mt-5 mb-5"> 
       <div class="card text-bg-secondary">
          {{#with subscribe}}
        <div class="card-header">
            <h3> <p class="ps-0">{{header}}</p></h3>
            <div class="card-body">
            	<p class="ps-0">{{description}}</p>
                {{#each buttons}}
              	<div class="d-grid gap-1 d-md-block p-2">
                     <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                     </div>
                     {{/each}}
                 </div> 
             </div>
            {{/with}}
       </div> 
         </div>  
         </section> 
       <hr>
    <footer>
         <nav class="nav">
         {{#each footer}}
        <div class="nav-item col-2">
         {{#each this}}
            <a href="{{link}}" class="nav-link {{#if @last}}
            disabled{{/if}}">{{text}}</a>
         {{/each}}
    
    </div>
   {{/each}}
   </nav>
</footer>

 
</html>
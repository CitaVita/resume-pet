<html>
    <header>
        {{#with navigation}}
        <div class="card mb-5">
            <div class="p-2 row">
             <nav class="nav d-flex">
              {{#each links}}
              <a href="{{href}}" class=" nav-link">{{text}}</a>
                {{/each}}
            <a href="#" class="nav-link disabled">Disabled</a>
             </nav>
            </div>
        </div>
        {{/with}}
    </header>

    <hr>

<main>
    <div class="mb-5 mt-5">
           <h2> <p class="ps-3"{{#with header}}></p></h2> 
              <h2>{{title}}</h2>
              <div class="mt-3">{{#with button}}
               <a href="{{link}}" class="btn btn-outline-secondary">{{text}}</a>
            </div>
        {{/with}}
    </div>
 {{/with}}
</main>

<hr>

<div class="card mt-5">
   <div class="row">
        <div class="header ps-2">
           
            {{#each goodsBlock}}
            <div>{{#with this}}
        <img class="col-2 mt-2 ps-2" src="{{image}}" alt="photos">
         <div class="row">
                     <div class="body col-6">
                           <h4><p>{{name}}</p></h4>
                           <p>{{description}}</p>
                        </div>
                
                        
                        <div class="col-1">
                            <p>{{price.title}}</p>
                        </div>
                         
                          
                        <div class="col-1">
                           <h4><p>{{price.value}}</p></h4>
                        </div>
              
                      
                    <div class="col-2">
                     <p class="text-lg">{{amount}}</p>
                </div>
               
               
                <div class="footer col-2 d-grid gap-2 mb-3">
                  {{#each buttons}}
                  {{#if isPrimary}}
                 <button class="btn btn-primary">{{text}}</button> 
                 {{else}}
                 {{#if isDanger}}
                <button class="btn btn-outline-danger">{{text}}</button>
          </div>
          {{/if}}
           </div>
          {{/if}}
         
            
         {{/each}}
   </div>
</div>
    </div>
      </div>
      </div>
      {{/with}}   
{{/each}}
</div>

<hr>
<div class="ms-2 mt-5 mb-5">
    {{#with total}}
        <h3>{{title}}</h3>
            <h3>{{amount}}</h3>
                <div>{{delivery}}</div>
                   <div class="d-grid gap-3 mt-3">{{#each buttons}}
               <div> {{#if isSuccess}}
            <a href="{{link}}" class="btn btn-success">{{text}}</a>
        {{else}}
           <div> {{#if isOutline}}
            <a href="{{link}}" class="btn btn-outline-success">{{text}}</a>       
                 </div>
                    {{/if}} 
                        </div>
                    {{/if}}
                </div>
            {{/each}}
        </div>
    {{/with}}

<hr>

<div class="mt-5 mb-3">
    {{#with goodsOtherBlock}}
    <div class="text-center">
    <h3>{{title}}</h3>
</div>
</div>

<section>
<div class="mt-5 mb-5">
<div class="row gx-2 gy-4">	
{{#each cards}}
        <div class="col-4">
            <div class="card mb-5">
                 <img src="{{image}}" alt="photos">
                 <div class="card-title">
                    <h5><p>{{title}}</p></h5>
                       <div> {{#if isHot}}
                        <button class="btn btn-warning rounded-pill text-uppercase btn-sm">hot</button>
                         {{else}}
                       <div>{{#if isNew}}
                        <button class="btn btn-primary rounded-pill text-uppercase btn-sm">new</button>
                     </div>
                        {{/if}}
                     </div>
                     {{/if}}
                    </div>                    
                     <p class="card-text">{{description}}</p>    
                    </div>
                </div>
              </div> 
            {{/each}}       
        </div>
        </div>
     {{/with}}

        <hr>
        <section>
<div class="mt-5 mb-5"> 
       <div class="card text-bg-secondary">
          {{#with subscribe}}
        <div class="card-header">
            <h3> <p class="ps-0">{{header}}</p></h3>
            <div class="card-body">
            	<p class="ps-0">{{description}}</p>
                {{#each buttons}}
              	<div class="d-grid gap-1 d-md-block p-2">
                     <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                     </div>
                     {{/each}}
                 </div> 
             </div>
            {{/with}}
       </div> 
         </div>  
         </section> 
       <hr>
    <footer>
         <nav class="nav">
         {{#each footer}}
        <div class="nav-item">
         {{#each this}}
            <a href="{{link}}" class="nav-link">{{text}}</a>
         {{/each}}
        <a href="#" class="nav-link disabled">Disabled</a>
    </div>
   {{/each}}
   </nav>
</footer>

 
</html>